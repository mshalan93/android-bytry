<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434242">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="291dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_corners"
        android:drawableLeft="@drawable/ic_name"

        android:shadowColor="#6E6E6D"
        android:text="login"
        app:layout_constraintBottom_toTopOf="@+id/twitter_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </Button>

    <ImageView
        android:id="@+id/twitter_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter"
        app:layout_constraintEnd_toStartOf="@+id/linked_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/facebook_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="396dp" />

    <ImageView
        android:id="@+id/linked_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/linkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/twitter_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="396dp" />

    <ImageView
        android:id="@+id/facebook_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"
        app:layout_constraintEnd_toStartOf="@+id/twitter_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="396dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
