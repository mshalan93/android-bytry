<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_2021">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.31" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/order_success"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="165dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_focused"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="123456789"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@drawable/left_orange_raduis"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/right_raduis_grey"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:text="@string/order_num" />

        </LinearLayout>

        <TextView
            android:id="@+id/order_tracking"
            android:layout_width="122dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_edittext_focused"
            android:padding="7dp"
            android:text="@string/tracking_order"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:drawableRightCompat="@drawable/buildings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/back_to_home"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <TextView
            android:id="@+id/back_to_home"
            android:layout_width="122dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_focused"
            android:padding="7dp"
            android:text="@string/beck_to_home"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:drawableRightCompat="@drawable/buildings"
            app:layout_constraintEnd_toStartOf="@+id/order_tracking"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>